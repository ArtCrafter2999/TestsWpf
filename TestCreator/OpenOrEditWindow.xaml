<Window x:Class="TestCreator.OpenOrEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestCreator"
        mc:Ignorable="d"
        Title="Открытие" MinHeight="250" Height="250" Width="270">
    <StackPanel>
        <Button Content="Создать новый" Command="{Binding Path=NewCommand}" FontSize="20" Height="60" Margin="5" Background="DarkSeaGreen"/>
        <Button Content="Открыть Сущестующий" Command="{Binding Path=EditCommand}" FontSize="20" Height="60" Margin="5" Background="MediumSeaGreen"/>
        <Button Content="Выйти" Command="{Binding Path=CloseCommand}" FontSize="20" Height="60" Margin="5" Background="SeaGreen"/>
    </StackPanel>
</Window>
