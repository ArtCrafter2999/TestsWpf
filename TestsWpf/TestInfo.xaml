<Window x:Class="TestsWpf.TestInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestsWpf"
        mc:Ignorable="d"
        Title="" Height="230" Width="350">
    <Grid>
        <TextBlock Name="Info" Margin="10,10,10,68" TextWrapping="Wrap"/>
        <Label Content="Имя, Фамилия:" Margin="10,0,0,37" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <TextBox Text="{Binding Path=UserName, UpdateSourceTrigger=PropertyChanged}" Height="22" Margin="103,0,10,37" VerticalAlignment="Bottom"/>
        <Button Command="{Binding Path=OKButton}" Content="Начать тест" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="88" Height="22" Margin="0,0,10,10"/>
    </Grid>
</Window>
